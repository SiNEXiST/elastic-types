{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "allowJs": false,
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "./",
    "removeComments": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "elastic-types": ["./index"],
      "elastic-types/geo": ["./geo"],
      "elastic-types/options": ["./options"],
      "elastic-types/queries": ["./queries/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
